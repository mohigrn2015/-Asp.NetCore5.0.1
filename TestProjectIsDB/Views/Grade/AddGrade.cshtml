@model TestProjectIsDB.Models.PlayerViewModel.CreateGradeViewModel

@{
    ViewData["Title"] = "AddGrade";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add Grade</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddGrade" asp-controller="Grade" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GradeName" class="control-label"></label>
                <input asp-for="GradeName" class="form-control" />
                <span asp-validation-for="GradeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

